<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VediPiattiActivity">



    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:text="\n         Spaghetti alla carbonara "
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imgCarbonara"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                app:srcCompat="@drawable/carbonara" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="\n                 Baba' al rum " />

            <ImageView
                android:id="@+id/imgBaba"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                app:srcCompat="@drawable/baba" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="\n               Polpette al sugo   " />

            <ImageView
                android:id="@+id/imgPolpette"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                app:srcCompat="@drawable/polpette" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:text="\n                 Frittelle dolci" />

            <ImageView
                android:id="@+id/imgFrittelle"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:srcCompat="@drawable/frittelledolci" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text=" \n              Lasagne al forno" />

            <ImageView
                android:id="@+id/imgLasagne"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                app:srcCompat="@drawable/lasagne" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="\n               Strudel di mele" />

            <ImageView
                android:id="@+id/imgStrudel"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                app:srcCompat="@drawable/strudel" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="\n               Salmone al forno" />

            <ImageView
                android:id="@+id/imgSalmone"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                app:srcCompat="@drawable/salmone" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="\n                    Tiramisu'" />

            <ImageView
                android:id="@+id/imgTiramisu"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                app:srcCompat="@drawable/tiramisu" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="\n          Risotto ai funghi porcini" />

            <ImageView
                android:id="@+id/imgRisotto"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                app:srcCompat="@drawable/risottofunghi" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="\n         Crostata ai frutti di bosco" />

            <ImageView
                android:id="@+id/imgCrostata"
                android:layout_width="426dp"
                android:layout_height="168dp"
                app:srcCompat="@drawable/crostataa" />



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>


